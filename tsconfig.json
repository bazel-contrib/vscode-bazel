{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2022",
        "outDir": "dist",
        "lib": [
            "es2022",
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "strictNullChecks": false,
        "allowJs": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "dist",
        "node_modules",
        "out",
        "esbuild*.js",
        "eslint.config.js",
        "scripts",
    ]
}
