{
    "name": "starlark-syntax-coloring",
    "displayName": "Starlark Syntax Coloring",
    "description": "Provides syntax highlighting for Starlark files.",
    "version": "0.11.0",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/bazelbuild/vscode-bazel.git"
    },
    "engines": {
        "vscode": "^1.88.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "breakpoints": [
            {
                "language": "starlark"
            }
        ],
        "grammars": [
            {
                "language": "starlark",
                "scopeName": "source.starlark",
                "path": "./syntaxes/starlark.tmLanguage.json"
            }
        ],
        "languages": [
            {
                "id": "starlark",
                "aliases": [
                    "Starlark",
                    "starlark",
                    "Bazel"
                ],
                "extensions": [
                    ".BUILD",
                    ".WORKSPACE",
                    ".bazel",
                    ".bzl",
                    ".bzlmod",
                    ".sky",
                    ".star"
                ],
                "filenames": [
                    "BUILD",
                    "WORKSPACE"
                ],
                "configuration": "./syntaxes/starlark.configuration.json"
            }
        ]
    },
    "scripts": {
        "check-lint": "eslint .",
        "format-check": "prettier --check .",
        "format-fix": "prettier --write .",
        "package": "npx vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.88.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.3.9",
        "@vscode/vsce": "^2.24.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsdoc": "^48.2.2",
        "js-yaml": "^4.1.0",
        "mocha": "^10.8.2",
        "prettier": "^3.2.5",
        "typescript": "^5.4.4",
        "typescript-eslint": "^7.5.0"
    },
    "dependencies": {
        "vscode-uri": "^3.0.2"
    }
}
