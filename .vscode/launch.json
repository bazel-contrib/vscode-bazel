{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build"
        },
        {
            "name": "Launch Debug Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/dist/debug-adapter-client.js",
            "args": [
                "--server=4711"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build:debugadapter"
        },
        {
            "name": "Launch Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "testConfiguration": "${workspaceFolder}/.vscode-test.js",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build:tests"
        }
    ],
    "compounds": [
        {
            "name": "Extension and Debug Server",
            "configurations": [
                "Launch Extension",
                "Launch Debug Server"
            ]
        },
        {
            "name": "Extension Tests and Debug Server",
            "configurations": [
                "Launch Extension Tests",
                "Launch Debug Server"
            ]
        }
    ]
}
